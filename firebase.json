{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint",
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ]
  },
  "hosting": {
    "public": "dist/bootcamp",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/getVideo",
        "function": "getVideo"
      },
      {
        "source": "/api/getVideos",
        "function": "getVideos"
      },
      {
        "source": "/api/getPlaylist",
        "function": "getPlaylist"
      },
      {
        "source": "/api/addToPlaylist",
        "function": "addToPlaylist"
      },
      {
        "source": "/api/removeFromPlaylist",
        "function": "removeFromPlaylist"
      },
      {
        "source": "/api/getUser",
        "function": "getUser"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source": "**/*.@(eot|otf|ttf|ttc|woff|font.css)",
        "headers": [
          {
            "key": "Access-Control-Allow-Origin",
            "value": "*"
          }
        ]
      },
      {
        "source": "**/*.@(html|jpg|jpeg|gif|png|svg|js|eot|otf|ttf|ttc|woff|css)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=86400, s-maxage=31536000"
          }
        ]
      },
      {
        "source": "/",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=86400, s-maxage=31536000"
          }
        ]
      }
    ]
  }
}
